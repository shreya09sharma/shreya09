#include <stdio.h>

int main() {
    int perimeter ,area;
    int l,b;
    printf("\n enter the length");
    scanf("%d",&l);
    
    printf("\n enter the breadth");
    scanf("%d",&b);
    perimeter=2*(l+b);
    area=l*b;
    printf("\n enter the perimeter of a rectangle %d",perimeter);
    printf("\n enter the area of a rectangle %d",area);  
    return 0;
}
