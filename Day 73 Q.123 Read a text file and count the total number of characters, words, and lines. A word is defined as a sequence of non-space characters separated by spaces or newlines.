#include <stdio.h>
#include <ctype.h>

int main() {
    FILE *fp;
    char ch;
    int characters = 0, words = 0, lines = 0;
    int inWord = 0;  // Flag to track if we are inside a word

    fp = fopen("input.txt", "r");

    if (fp == NULL) {
        printf("Error opening file.\n");
        return 1;
    }

    while ((ch = fgetc(fp)) != EOF) {
        characters++;  // count every character

        // Count lines
        if (ch == '\n')
            lines++;

        // Count words
        if (isspace(ch)) {
            inWord = 0;     // We are no longer in a word
        } else {
            if (inWord == 0) {
                words++;     // A new word starts
                inWord = 1;
            }
        }
    }

    fclose(fp);

    // If file has characters but no newline, assume at least 1 line
    if (characters > 0 && lines == 0)
        lines = 1;

    printf("Total characters: %d\n", characters);
    printf("Total words: %d\n", words);
    printf("Total lines: %d\n", lines);

    return 0;
}
